<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Genres: Games Inventory</title>
    <link rel="stylesheet" href="/css/global.css" />
    <link rel="stylesheet" href="/css/genres/index.css" />
  </head>
  <body>
    <%- include('../partials/header.ejs') %>

    <main>
      <aside class="sidebar">
        <h2><%= heading %></h2>
        <ul class="genre-list">
          <% genres.forEach((genre) => { %>
          <li>
            <a href="/genres/<%= genre.id %>"><%= genre.name %></a>
            <div class="genre-actions">
              <form
                action="/genres/<%= genre.id %>?_method=DELETE"
                method="POST"
              >
                <button type="submit" class="btn-delete">Delete</button>
              </form>
              <a class="edit-link" href="/genres/<%= genre.id %>/edit-genre"
                >Edit</a
              >
            </div>
          </li>
          <% }); %>
        </ul>
        <a class="add-link" href="/genres/add-genre">+ Genre</a>
      </aside>

      <section class="genre-games">
        <% if(!genreGames || genreGames.length === 0) { %>
        <article class="game-card">
          <p>Click on a genre to see the list.</p>
        </article>
        <% } else { %> <% genreGames.forEach((game) => { %>
        <article class="game-card">
          <p><%= game.name %></p>
          <p>Developer: <%= game.developer_names.join(", ") %></p>
          <p>Stock: <%= game.stock %></p>
        </article>
        <% }); %> <% } %>
      </section>
    </main>

    <%- include('../partials/footer.ejs') %>
  </body>
</html>
